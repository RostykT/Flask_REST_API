[tool.autopep8]
max_line_length = 120
ignore = [ 'E501' ]
include = '\.pyi?$'
exclude = '''
/(
    \.git
    | \.hg
    | \.mypy_cache
    | \.tox
    | \.venv
    | _build
    | buck-out
    | build
    | dist
)/
'''

[flake8]
max-line-length = 88
extend-ignore = [ 'E501' ]
max-complexity = 18
select = [ 'B','C','E','F','W','T4','B9' ]
